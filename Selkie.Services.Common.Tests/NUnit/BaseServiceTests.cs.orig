            m_Service.StopServiceRequestHandler(message);

            m_Bus.Received()
                 .Publish(Arg.Is <StopServiceResponseMessage>(x => x.ServiceName == typeof ( TestBaseService ).FullName));
        }

        [Test]
        public void StopServicesRequestHandlerSetsIsStoppedTest()
